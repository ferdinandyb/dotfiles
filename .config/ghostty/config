theme = Dracula
font-family = "CaskaydiaCove Nerd Font Mono"
font-size = 14
mouse-hide-while-typing = true
fullscreen = false
maximize = true
window-decoration = auto
confirm-close-surface = false
# copy-on-select = true
copy-on-select = clipboard
cursor-click-to-move = true
macos-option-as-alt = left
macos-titlebar-style = tabs
macos-window-buttons = hidden
macos-auto-secure-input = true
macos-secure-input-indication = true
unfocused-split-opacity = 0.95
link-previews = true
focus-follows-mouse = true
shell-integration-features = true

# keybinds
keybind = ctrl+shift+r=reload_config
keybind = ctrl+shift+i=inspector:toggle
keybind = super+comma=unbind
keybind = global:alt+shift+t=toggle_quick_terminal
keybind = ctrl+shift+p=toggle_command_palette

## window handling
keybind = ctrl+shift+n=new_window
keybind = ctrl+shift+x=close_window
keybind = ctrl+shift+q=close_surface

## tab handling
keybind = ctrl+shift+one=goto_tab:1
keybind = ctrl+shift+two=goto_tab:2
keybind = ctrl+shift+three=goto_tab:3
keybind = ctrl+shift+four=goto_tab:4
keybind = ctrl+shift+five=goto_tab:5
keybind = ctrl+shift+six=goto_tab:6
keybind = ctrl+shift+seven=goto_tab:7
keybind = ctrl+shift+eight=goto_tab:8
keybind = ctrl+shift+nine=goto_tab:9

keybind = ctrl+page_up=previous_tab
keybind = ctrl+page_down=next_tab
keybind = ctrl+shift+left=previous_tab
keybind = ctrl+shift+right=next_tab
keybind = ctrl+shift+t=new_tab

## split handling
keybind = ctrl+shift+down=goto_split:bottom
keybind = ctrl+shift+left=goto_split:left
keybind = ctrl+shift+right=goto_split:right
keybind = ctrl+shift+up=goto_split:top

keybind = ctrl+shift+j=goto_split:bottom
keybind = ctrl+shift+h=goto_split:left
keybind = ctrl+shift+l=goto_split:right
keybind = ctrl+shift+k=goto_split:top

keybind = ctrl+shift+ö=new_split:down
keybind = ctrl+shift+ü=new_split:right
keybind = ctrl+shift+equal=equalize_splits
keybind = ctrl+shift+z=toggle_split_zoom

## font size manipulation
keybind = ctrl+shift+Digit3=increase_font_size:1
keybind = ctrl+shift+Slash=decrease_font_size:1
keybind = ctrl+shift+Backquote=reset_font_size

## copy/paste
keybind = ctrl+shift+a=select_all
keybind = ctrl+shift+c=copy_to_clipboard
keybind = ctrl+shift+j=write_scrollback_file:paste
keybind = super+shift+j=write_screen_file:paste
keybind = shift+insert=paste_from_selection
keybind = ctrl+shift+v=paste_from_clipboard

## jumping around in the scrollback
keybind = ctrl+shift+bracket_right=jump_to_prompt:1
keybind = ctrl+shift+bracket_left=jump_to_prompt:-1
keybind = ctrl+shift+end=scroll_to_bottom
keybind = ctrl+shift+home=scroll_to_top
keybind = ctrl+shift+page_down=scroll_page_down
keybind = ctrl+shift+page_up=scroll_page_up

## resizing
keybind = super+ctrl+shift+down=resize_split:down,10
keybind = super+ctrl+shift+left=resize_split:left,10
keybind = super+ctrl+shift+right=resize_split:right,10
keybind = super+ctrl+shift+up=resize_split:up,10


# make stuff work
keybind = ctrl+ő=text:\x1b
keybind = ctrl+ú=text:\x1d

## claude code workaround
keybind = shift+enter=text:\x1b\r

