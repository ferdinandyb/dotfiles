# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Gmail
account        priestoferis
host           smtp.gmail.com
port           587
auth           oauthbearer
tls_starttls   on
from           priestoferis@gmail.com
user           priestoferis@gmail.com
passwordeval   /home/fbence/bin/mailctl access priestoferis

# Formsense
account        formsense
host           smtp.gmail.com
port           587
auth           oauthbearer
tls_starttls   on
from           bence.ferdinandy@formsense.com
user           bence.ferdinandy@formsense.com
passwordeval   /home/fbence/bin/mailctl access formsense

# ELTE
account        elte
host           smtp.office365.com
port           587
auth           xoauth2
tls_starttls   on
tls_certcheck  on
from           ferdinandy.bence@ttk.elte.hu
user           ferdinandy.bence@ttk.elte.hu
passwordeval   /home/fbence/.config/emailconfiguration/mutt_oauth2.py /home/fbence/.config/emailconfiguration/eltetoken

# ferdinandy: bence
account        bence
host           mail.ferdinandy.com
port           465
auth           on
tls            on
tls_starttls   off
tls_certcheck  on
from           bence@ferdinandy.com
user           bence@ferdinandy.com
passwordeval   "pass show email/ferdinandy/bence | head -n1"

# eloszerepjatek: bence
account        eloszerepjatek
host           mail.ferdinandy.com
port           465
auth           on
tls            on
tls_starttls   off
tls_certcheck  on
from           bence.ferdinandy@eloszerepjatek.hu
user           bence.ferdinandy@eloszerepjatek.hu
passwordeval   "pass show email/eloszerepjatek/bence | head -n1"

# securebox: pharmahungary
account        pharmahungary
host           mail.securebox.hu
port           465
auth           on
tls            on
tls_starttls   off
tls_certcheck  on
from           bence.ferdinandy@pharmahungary.com
user           bence.ferdinandy@pharmahungary.com
passwordeval   "pass show web/webmail.securebox.hu/pharmahungary | head -n1"

# Set a default account
account default : bence
