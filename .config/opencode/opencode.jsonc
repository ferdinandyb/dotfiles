{
  "$schema": "https://opencode.ai/config.json",
  "snapshot": true,
  // Theme configuration
  "theme": "dracula",
  "autoupdate": false,
  "share": "disabled",
  "permission": {
    "bash": {
      "*": "ask",
      "taskagent *": "allow",
      "git log *": "allow",
      "git status *": "allow",
      "git add -A*": "deny",
      "git add --all*": "deny",
      "git add . *": "deny",
      "git push *": "deny",
      "yadm log *": "allow",
      "yadm status *": "allow",
      "yadm add -A*": "deny",
      "yadm add --all*": "deny",
      "yadm add . *": "deny",
      "yadm push *": "deny",
      "terraform apply *": "deny",
      "sudo *": "deny",
      "jira issue list *": "allow",
      "jira epic list *": "allow",
      "jira issue view *": "allow",
      "jq *": "allow",
      "jaq *": "allow",
      "fd *": "allow",
      "ug *": "allow",
      "TMPFILE=$(mktemp)": "allow"
    },
  },
  "keybinds": {
    "leader": "ctrl+x",
    "input_newline": "ctrl+enter",
    "editor_open": "<leader>v",
  },
  "mcp": {
    "tmux-mcp": {
      "type": "local",
      "command": ["tmux-mcp"],
    },
    "mcp-neovim-server": {
      "type": "local",
      "command": ["mcp-neovim-server"],
      "environment": {
        "ALLOW_SHELL_COMMANDS": "false",
        "NVIM_SOCKET_PATH": "./.nvim.sock",
      },
    },
  },
  "plugin": ["@franlol/opencode-md-table-formatter@0.0.3"]
}
