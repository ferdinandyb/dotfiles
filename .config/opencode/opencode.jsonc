{
  "$schema": "https://opencode.ai/config.json",
  "snapshot": true,
  // Theme configuration
  "theme": "dracula",
  "autoupdate": false,
  "share": "disabled",
  "permission": {
    "bash": {
      "ssh *": "ask",
      "scp *": "ask",
      "git commit *": "ask",
      "git merge *": "ask",
      "git rebase *": "ask",
      "git branch -d *": "ask",
      "git branch -D *": "ask",
      "git tag *": "ask",
      "git reset *": "ask",
      "git checkout *": "ask",
      "git switch *": "ask",
      "git stash *": "ask",
      "git push *": "deny",
      "yadm commit *": "ask",
      "yadm merge *": "ask",
      "yadm rebase *": "ask",
      "yadm branch -d *": "ask",
      "yadm branch -D *": "ask",
      "yadm tag *": "ask",
      "yadm reset *": "ask",
      "yadm checkout *": "ask",
      "yadm switch *": "ask",
      "yadm stash *": "ask",
      "yadm push *": "deny",
      "docker *": "ask",
      "rsync *": "ask",
      "terraform apply *": "deny",
      "sudo *": "deny"
    }
  },
  "keybinds": {
    "leader": "ctrl+x",
    "input_newline": "shift+enter",
    "editor_open": "<leader>v",

  },
  "formatter": {
    "black": {
      "command": ["uv", "run", "black", "$FILE"],
      "extensions": [".py"]
    },
    "isort": {
      "command": ["uv", "run", "isort", "$FILE"],
      "extensions": [".py"]
    },
    "flake8": {
      "command": ["uv", "run", "flake8", "$FILE"],
      "extensions": [".py"]
    },
    "ruff": {
      "disabled": true
    }
  },
  "mcp": {
    "tmux-mcp": {
      "type": "local",
      "command": ["tmux-mcp"],
    },
    "mcp-neovim-server": {
      "type": "local",
      "command": ["mcp-neovim-server"],
      "environment": {"ALLOW_SHELL_COMMANDS": "false", "NVIM_SOCKET_PATH": "./.nvim.sock"}
    }
  }
}
