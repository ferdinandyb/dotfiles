{
  "$schema": "https://opencode.ai/config.json",
  "snapshot": true,
  // Theme configuration
  "theme": "dracula",
  "autoupdate": false,
  "share": "disabled",
  "permission": {
    "bash": {
      "taskagent *": "allow",
      "ssh *": "ask",
      "scp *": "ask",
      "git commit *": "ask",
      "git merge *": "ask",
      "git rebase *": "ask",
      "git branch -d *": "ask",
      "git branch -D *": "ask",
      "git tag *": "ask",
      "git reset *": "ask",
      "git checkout *": "ask",
      "git switch *": "ask",
      "git stash *": "ask",
      "git push *": "deny",
      "yadm commit *": "ask",
      "yadm merge *": "ask",
      "yadm rebase *": "ask",
      "yadm branch -d *": "ask",
      "yadm branch -D *": "ask",
      "yadm tag *": "ask",
      "yadm reset *": "ask",
      "yadm checkout *": "ask",
      "yadm switch *": "ask",
      "yadm stash *": "ask",
      "yadm push *": "deny",
      "docker *": "ask",
      "rsync *": "ask",
      "terraform apply *": "deny",
      "sudo *": "deny",
      "jira issue list *": "allow",
      "jira epic list *": "allow",
      "jira issue view *": "allow"
    }
  },
  "keybinds": {
    "leader": "ctrl+x",
    "input_newline": "ctrl+enter",
    "editor_open": "<leader>v",

  },
  "mcp": {
    "tmux-mcp": {
      "type": "local",
      "command": ["tmux-mcp"],
    },
    "mcp-neovim-server": {
      "type": "local",
      "command": ["mcp-neovim-server"],
      "environment": {"ALLOW_SHELL_COMMANDS": "false", "NVIM_SOCKET_PATH": "./.nvim.sock"}
    },
    "universal-skills" : {
      "type": "local",
      "command": ["universal-skills", "mcp", "--skill-dir", "~/.config/agents/skills"],
      "enabled": true
    }
  }
}
