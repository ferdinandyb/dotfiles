{
  "$schema": "https://opencode.ai/config.json",
  "snapshot": true,
  // Theme configuration
  "theme": "dracula",
  "autoupdate": false,
  "share": "disabled",
  "keybinds": {
    "leader": "ctrl+x",
    "input_newline": "shift+enter",
    "editor_open": "<leader>v",

  },
  "formatter": {
    "black": {
      "command": ["uv", "run", "black", "$FILE"],
      "extensions": [".py"]
    },
    "isort": {
      "command": ["uv", "run", "isort", "$FILE"],
      "extensions": [".py"]
    },
    "flake8": {
      "command": ["uv", "run", "flake8", "$FILE"],
      "extensions": [".py"]
    },
    "ruff": {
      "disabled": true
    }
  },
  "mcp": {
    "tmux-mcp": {
      "type": "local",
      "command": ["tmux-mcp"],
    },
    "mcp-neovim-server": {
      "type": "local",
      "command": ["mcp-neovim-server"],
      "environment": {"ALLOW_SHELL_COMMANDS": "false", "NVIM_SOCKET_PATH": "./.nvim.sock"}
    }
  }
}
